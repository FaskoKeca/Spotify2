@model MusicStreaming.Models.Song

@{
    ViewData["Title"] = "Create Song";
}

<div class="form-container" style="max-width: 500px; margin: 0 auto;">
    <h1>Add New Song</h1>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label class="form-label" for="songName">Song Name</label>
            <input type="text" class="form-control" id="songName" name="songName" required />
        </div>

        <div class="form-group">
            <label class="form-label" for="producer">Producer</label>
            <input type="text" class="form-control" id="producer" name="producer" />
        </div>

        <div class="form-group">
            <label class="form-label" for="songYear">Year</label>
            <input type="number" class="form-control" id="songYear" name="songYear" min="1900" max="@DateTime.Now.Year" />
        </div>

        <button type="submit" class="btn btn-primary">Create Song</button>
        <a href="@Url.Action("Index", "Songs")" class="btn btn-secondary">Cancel</a>
    </form>

    @if (ViewData.ModelState["songName"]?.Errors.Count > 0)
    {
        <div class="error" style="margin-top: 1rem;">@ViewData.ModelState["songName"]?.Errors[0]?.ErrorMessage</div>
    }
</div>
