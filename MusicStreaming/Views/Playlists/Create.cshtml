@model MusicStreaming.Models.Playlist

@{
    ViewData["Title"] = "Create Playlist";
}

<div class="form-container" style="max-width: 500px; margin: 0 auto;">
    <h1>Create New Playlist</h1>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label class="form-label" for="playlistName">Playlist Name</label>
            <input type="text" class="form-control" id="playlistName" name="playlistName" required />
        </div>

        <div class="form-group">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" id="description" name="description" rows="4"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Create Playlist</button>
        <a href="@Url.Action("Index", "Playlists")" class="btn btn-secondary">Cancel</a>
    </form>

    @if (ViewData.ModelState["playlistName"]?.Errors.Count > 0)
    {
        <div class="error" style="margin-top: 1rem;">@ViewData.ModelState["playlistName"]?.Errors[0]?.ErrorMessage</div>
    }
</div>
