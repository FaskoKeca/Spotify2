@model List<MusicStreaming.Models.Song>

@{
    ViewData["Title"] = "Songs";
}

@if (Model?.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Song Name</th>
                <th>Artist</th>
                <th>Producer</th>
                <th>Year</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var song in Model)
            {
                var isSaved = ((ViewData["SavedSongIds"] as HashSet<int>)?.Contains(song.Id)) ?? false;
                <tr>
                    <td>
                        <a href="@Url.Action("Details", "Songs", new { id = song.Id })">@song.SongName</a>
                    </td>
                    <td>
                        @if (song.Artist != null)
                        {
                            <a href="@Url.Action("Artist", "UserProfile", new { id = song.ArtistId })">
                                @song.Artist.Username
                            </a>
                        }
                    </td>
                    <td>@song.Producer</td>
                    <td>@song.SongYear</td>
                    <td>
                        <button class="btn btn-heart btn-sm @(isSaved ? "saved" : "")"
                                type="button"
                                onclick="toggleSaveSong(@song.Id, this)">
                            @(isSaved ? "♥ Saved" : "♡ Save")
                        </button>
                        @if (ViewData["Role"]?.ToString() == "Artist" && song.ArtistId == Context.Session.GetInt32("UserId") || ViewData["Role"]?.ToString() == "Admin")
                        {
                            <a href="@Url.Action("Edit", "Songs", new { id = song.Id })" class="btn btn-info btn-sm">Edit</a>
                            <a href="@Url.Action("Delete", "Songs", new { id = song.Id })" class="btn btn-danger btn-sm">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No songs found.</p>
}

@if (ViewData["Role"]?.ToString() == "Artist" || ViewData["Role"]?.ToString() == "Admin")
{
    <a href="@Url.Action("Create", "Songs")" class="btn btn-primary">Add New Song</a>
}
